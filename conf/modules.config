/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'YAML' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/config" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CAT_HIC' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/reads/hic" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'FASTP' {
        ext.args = '--qualified_quality_phred 15 --unqualified_percent_limit 40 --n_base_limit 5'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/reads/hic/fastp" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'CAT_HIFI' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/reads/hifi" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'MINIMAP2_INDEX' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/alignment/minimap2" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'MINIMAP2_ALIGN_HIFI' {
        ext.args = '-ax map-hifi --secondary=no'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/alignment/hifi" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'MINIMAP2_ALIGN_HIC' {
        ext.args = '-ax sr --secondary=no'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/alignment/hic" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SAMTOOLS_MERGE' {
    publishDir = [
        path: { "${params.outdir}/${meta.id}/alignment/merged" },
        mode: params.publish_dir_mode
    ]
}

withName: 'SAMTOOLS_INDEX' {
    publishDir = [
        path: { "${params.outdir}/${meta.id}/alignment/merged" },
        mode: params.publish_dir_mode
    ]
}

withName: 'SAMTOOLS_SORT_HIFI' {
    publishDir = [
        path: { "${params.outdir}/${meta.id}/alignment/hifi" },
        mode: params.publish_dir_mode
    ]
}

withName: 'SAMTOOLS_SORT_HIC' {
    publishDir = [
        path: { "${params.outdir}/${meta.id}/alignment/hic" },
        mode: params.publish_dir_mode
    ]
}


    withName: 'BLOBTK_DEPTH' {
    ext.args = '-s 1000'
    publishDir = [
        path: { "${params.outdir}/${meta.id}/blobtools/depth" },
        mode: params.publish_dir_mode
    ]
    cpus = 2
    memory = '4.GB'
    time = '1.h'
}

withName: 'FASTAWINDOWS' {
        ext.args = '--window_size 1000'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/windows/fastawindows" },
            mode: params.publish_dir_mode
        ]
    }
    withName: 'WINDOWSBED' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/windows/bed" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'BLOBTOOLS_COUNTBUSCOS' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/busco/windows" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'BED_FREQ' {
        ext.prefix = { "${meta.id}.freq_windows" }
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/windows/bed/freq" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'BED_MONONUC' {
        ext.prefix = { "${meta.id}.mononuc_windows" }
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/windows/bed/mononuc" },
            mode: params.publish_dir_mode
        ]
    }

        withName: 'BED_BUSCO' {
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/windows/bed/busco" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SEQKIT_SLIDING' {
        ext.args = '-s 100000 -W 100000'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/blast/seqkit" },
            mode: params.publish_dir_mode
        ]
    }

    withName: 'SEQKIT_SPLIT2' {
        ext.args = '-p 65'
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/blast/seqkit" },
            mode: params.publish_dir_mode
        ]
    }

withName: 'BLAST_BLASTN' {
    cpus   = 4
    memory = { 25.GB + (10.GB * (task.attempt - 1)) }
    time   = { 12.h + (5.h * (task.attempt - 1)) }
    
    errorStrategy = 'retry'
    maxRetries = 2

    ext.args = [
        '-task megablast',
        '-outfmt "6 qseqid staxids bitscore std"',
        '-max_target_seqs 1',
        '-max_hsps 1',
        '-evalue 1e-25'
    ].join(' ')

    publishDir = [
        path: { "${params.outdir}/${meta.id}/blobtools/blast/results" },
        mode: params.publish_dir_mode
    ]
}

    withName: 'BLAST_TOP_HITS' {
        ext.args = ''
        publishDir = [
            path: { "${params.outdir}/${meta.id}/blobtools/blast/top_hits" },
            mode: params.publish_dir_mode
        ]
        cpus = 1
        memory = '4.GB'
        time = '30.min'
    }


}